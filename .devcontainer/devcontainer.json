{
  "name": "gip-python310-uv",
  "dockerComposeFile": "../docker-compose.yaml",
  "service": "dev",
  "workspaceFolder": "/workspaces",
  "remoteUser": "vscode",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/opt/venv/bin/python",
        "python.testing.pytestArgs": [
          "tests"
        ],
        "python.testing.unittestEnabled": true,
        "python.testing.pytestEnabled": true,
        "python.testing.nosetestsEnabled": false,
        "terminal.integrated.defaultProfile.linux": "bash",
        "python.formatting.provider": "black",
        "editor.formatOnSave": true
      }
    }
  },
  "postCreateCommand": "git config --global --add safe.directory /workspaces && git config --global user.name '${USER}' && uv pip list",
  "mounts": [
    "source=${localEnv:HOME}/.ssh,target=/home/vscode/.ssh:ro",
    "source=${localEnv:USERPROFILE}/.aws,target=/home/vscode/.aws:ro"
  ],
  "postStartCommand": "bash -l -c",
  "containerEnv": {
    "USER": "${localEnv:USER}",
    "USER_UID": "${localEnv:UID}",
    "USER_GID": "${localEnv:GID}"
  }
}